<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <jsp-config>
        <taglib>
            <taglib-uri>cbbtaglib</taglib-uri>
            <taglib-location>/WEB-INF/tld/custom.tld</taglib-location>
        </taglib>

        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>Error</servlet-name>
        <jsp-file>/jsp/error.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignIn</servlet-name>
        <jsp-file>/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <jsp-file>/jsp/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Home</servlet-name>
        <jsp-file>/jsp/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Services</servlet-name>
        <jsp-file>/jsp/services.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Services</servlet-name>
        <url-pattern>/services</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Edit service</servlet-name>
        <jsp-file>/WEB-INF/jsp/admin/editService.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Edit service</servlet-name>
        <url-pattern>/editService</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>View service</servlet-name>
        <jsp-file>/jsp/service.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>View service</servlet-name>
        <url-pattern>/viewService</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Account</servlet-name>
        <jsp-file>/jsp/account.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Account</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>User orders</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/userOrders.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>User orders</servlet-name>
        <url-pattern>/userOrders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>All orders</servlet-name>
        <jsp-file>/WEB-INF/jsp/admin/allOrders.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>All orders</servlet-name>
        <url-pattern>/allOrders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Users</servlet-name>
        <jsp-file>/WEB-INF/jsp/admin/users.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Users</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResetPassword</servlet-name>
        <jsp-file>/jsp/resetPassword.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResetPassword</servlet-name>
        <url-pattern>/resetPassword</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Edit review</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/editReview.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Edit review</servlet-name>
        <url-pattern>/editReview</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Add order</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/addOrder.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Add order</servlet-name>
        <url-pattern>/addOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>View order</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/orderCheck.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>View order</servlet-name>
        <url-pattern>/viewOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Add money</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/addMoneyToCard.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Add money</servlet-name>
        <url-pattern>/addMoney</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>by.epam.web.controller.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>Access check filter</filter-name>
        <filter-class>by.epam.web.controller.filter.AccessCheckFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Access check filter</filter-name>
        <url-pattern>/app</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>Session invalidator</filter-name>
        <filter-class>by.epam.web.controller.filter.SessionInvalidationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Session invalidator</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>